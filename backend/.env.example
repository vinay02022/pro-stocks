# StockPro Backend Environment Configuration
# Copy to .env and fill in values

# Application
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/stockpro

# Redis
REDIS_URL=redis://localhost:6379

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=["http://localhost:3000"]

# Groww API
GROWW_API_KEY=
GROWW_API_SECRET=
GROWW_BASE_URL=https://api.groww.in

# Angel One API
ANGEL_ONE_API_KEY=
ANGEL_ONE_CLIENT_ID=
ANGEL_ONE_PASSWORD=
ANGEL_ONE_TOTP_SECRET=
ANGEL_ONE_BASE_URL=https://apiconnect.angelone.in
ANGEL_ONE_WS_ENABLED=true

# Upstox API (for WebSocket streaming fallback)
UPSTOX_API_KEY=
UPSTOX_API_SECRET=
UPSTOX_REDIRECT_URI=http://localhost:3000/api/auth/upstox/callback
UPSTOX_ACCESS_TOKEN=
UPSTOX_WS_ENABLED=true

# LLM Providers
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
LLM_PRIMARY_PROVIDER=anthropic
LLM_REASONING_MODEL=claude-3-opus-20240229
LLM_EXPLANATION_MODEL=claude-3-haiku-20240307

# News API
NEWS_API_KEY=
NEWS_API_BASE_URL=https://newsapi.org/v2

# Feature Flags
ENABLE_LIVE_DATA=false
ENABLE_OPTIONS=false
ENABLE_PAPER_TRADING=true

# Risk Defaults
DEFAULT_MAX_POSITION_PERCENT=5.0
DEFAULT_MAX_DAILY_LOSS_PERCENT=2.0
DEFAULT_MAX_DAILY_TRADES=10
DEFAULT_MIN_RISK_REWARD=1.5
